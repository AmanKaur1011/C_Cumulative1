<!-- This View  takes the data of a new teacher and  validate it and then send it to the /Teacher/Create-->
@{
    ViewBag.Title = "New";
}
<script>


    function processForm() {
        var fname = document.getElementById("TeacherFname").value;
        var lname = document.getElementById("TeacherLname").value;
        var employeeno = document.getElementById("EmployeeNumber").value;
        var hiredate = document.getElementById("HireDate").value;
        var salary = document.getElementById("Salary").value;
        var errormsg = document.getElementById("Outmessage");
        if (fname === "") {
            errormsg.innerHTML = "Please fill all the fields";
            errormsg.style.color = "red";
            return false;
        }
        if (lname === "") {
            errormsg.innerHTML = "Please fill all the fields";
            errormsg.style.color = "red";
            return false;
        }
        if (employeeno === "") {
            errormsg.innerHTML = "Please fill all the fields";
            errormsg.style.color = "red";
            return false;
        }
        if (hiredate === "") {
            errormsg.innerHTML = "Please fill all the fields";
            errormsg.style.color = "red";
            return false;
        }
        if (salary === "") {
            errormsg.innerHTML = "Please fill all the fields";
            errormsg.style.color = "red";
            return false;
        }


        return true;



    };

</script>

<h2>Add New Teacher</h2>
<nav>
    <a class="navlink" href="/Teacher/List">Back To Teachers</a>
</nav>

<form method="POST" action="/Teacher/Create" onsubmit="return processForm()">

    <div>
        <label for="TeacherFname">First Name:</label>
        <input type="text" id="TeacherFname" name="TeacherFname" />

    </div>
    <div>
        <label for="TeacherLname">Last Name:</label>
        <input type="text" id="TeacherLname" name="TeacherLname" />

    </div>

    <div>
        <label for="EmployeeNumber">Employee Number:</label>
        <input type="text" id="EmployeeNumber" name="EmployeeNumber" />
    </div>
    <div>
        <label for="HireDate">Hire Date:</label>
        <input type="date" id="HireDate" name="HireDate" />

    </div>
    <div>
        <label for="Salary">Salary:</label>
        <input type="number" id="Salary" name="Salary" step="0.01" min="0" placeholder="50.00" />

    </div>

    <div>
        <input type="submit" value="Create Teacher" />
    </div>
    <div id="Outmessage"></div>
</form>



